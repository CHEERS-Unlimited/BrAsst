{# src/AppBundle/Resources/views/Meat/layout.html.twig #}
{% extends '::base.html.twig' %}

{% block meta %}
    <title>{{ 'meta.title'|trans }}</title>
    {{ parent() }}
    <meta name="Description" content="{{ 'meta.description'|trans }}">
    <meta property="og:title" content="{{ 'meta.title'|trans }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ url('index', { '_locale': app.request.locale }) }}">
    <meta property="og:description" content="{{ 'meta.description'|trans }}">
    <meta property="og:locale" content="en_GB">
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/Meat/css/main.css') }}">
{% endblock %}

{% block body %}
    <div id="page">
        <header id="header">
            {% include 'AppBundle:Meat\\Common:header.html.twig' %}
        </header>

        {% block states %}
            <div id="content">
                <div id="particles">
                    <canvas id="connection"></canvas>
                </div>

                {% render controller('AppBundle:Meat\\State:home') %}
                {% render controller('AppBundle:Meat\\State:aboutBrasst') %}
                {% render controller('AppBundle:Meat\\State:browsers', { 'browsers': browsers }) %}
                {% render controller('AppBundle:Meat\\State:brasstApi') %}

            </div>
        {% endblock %}

        <footer id="footer">
            {% include 'AppBundle:Meat\\Common:footer.html.twig' %}
        </footer>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.15/require.min.js" data-main="{{ asset('bundles/app/Meat/js/boot.js') }}"></script>
{% endblock %}
