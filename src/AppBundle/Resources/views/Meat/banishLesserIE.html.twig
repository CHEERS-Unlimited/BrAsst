{# src/AppBundle/Resources/views/Meat/banishLesserIE.html.twig #}
{% extends '::base.html.twig' %}

{% block meta %}
    <title>Br.Asst.</title>
    {{ parent() }}
    <meta name=“robots” content=“noindex,nofollow”>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/Meat/css/ie.css') }}">
{% endblock %}

{% block body %}
    <div id="page">
        <div class="content">
            <h1>Sorry, your browser is too old even for <span>BR.ASST.</span></h1>
            <div id="widget">
                <span class="icon updated"></span>
                <h2>You are using {{ browserDetected.browser }} from {{ browserDetected.vendor }}</h2>
                <ul>
                    <li><img src="{{ asset('bundles/app/Meat/images/ie.png') }}" alt="Interner Explorer logo"></li>
                    <li><p>for</p></li>
                    <li><img src="{{ asset('bundles/app/Meat/images/win.png') }}" alt="Windows Logo"></li>
                </ul>
                <p>and your version <span>{{ browserDetected.clientVersion }}</span> is obsolete</p>
                <div class="download">
                    <a href="{{ ieLink }}" target="_blank">Get the latest version</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}